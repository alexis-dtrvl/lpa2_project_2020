<p id="notice"><%= notice %></p>

<h1>Burgers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Image</th>
      <th>Nutriscore</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @burgers.each do |burger| %>
      <tr>
        <td><%= burger.Name %></td>
        <td><%= burger.Price %></td>
        <td><%= burger.Image %></td>
        <td><%= burger.Nutriscore %></td>
        <td><%= burger.code %></td>
      
        <td><button>
          <%= link_to 'Show', burger %>
        </button></td>
      
        <td><button>
          <%= link_to 'Edit', edit_burger_path(burger) %>
        </button></td>

        <td><button>
          <%= link_to 'Destroy', burger, method: :delete, data: { confirm: 'Are you sure?' } %>
        </button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button>
<%= link_to 'New Burger', new_burger_path %>
</button>